@page "/login"
@rendermode InteractiveServer
@using OopsReviewCenter.Services
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using System.Security.Claims
@inject OopsReviewCenterAA AuthService
@inject NavigationManager Navigation
@inject IHttpContextAccessor HttpContextAccessor

<PageTitle>Login - OopsReviewCenter</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">OopsReviewCenter Login</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @errorMessage
                        </div>
                    }

                    <div>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" id="username" class="form-control" value="@username" @oninput="@((e) => username = e.Value?.ToString() ?? string.Empty)" placeholder="Enter username" />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" id="password" class="form-control" value="@password" @oninput="@((e) => password = e.Value?.ToString() ?? string.Empty)" placeholder="Enter password" />
                        </div>

                        <div class="d-grid">
                            <button type="button" class="btn btn-primary" @onclick="HandleLogin" disabled="@isLoggingIn">
                                @if (isLoggingIn)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Logging in...</span>
                                }
                                else
                                {
                                    <span>Login</span>
                                }
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string username = string.Empty;
    private string password = string.Empty;
    private string? errorMessage;
    private bool isLoggingIn = false;

    private async Task HandleLogin()
    {
        // Set loading state and clear errors
        isLoggingIn = true;
        errorMessage = null;

        try
        {
            var httpContext = HttpContextAccessor.HttpContext;
            if (httpContext == null)
            {
                errorMessage = "Unable to authenticate. HTTP context not available.";
                return;
            }

            // Authenticate using pure AA service
            var authResult = await AuthService.AuthenticateAsync(username, password);

            if (!authResult.Success)
            {
                errorMessage = authResult.ErrorMessage;
                return;
            }

            // Create claims from auth result
            var claims = new List<Claim>
            {
                new Claim(ClaimTypes.NameIdentifier, authResult.UserId.ToString()),
                new Claim(ClaimTypes.Name, authResult.Username ?? authResult.UserId.ToString()),
                new Claim("FullName", authResult.FullName ?? authResult.Username ?? "User")
            };

            if (!string.IsNullOrEmpty(authResult.RoleName))
            {
                claims.Add(new Claim(ClaimTypes.Role, authResult.RoleName));
            }

            var identity = new ClaimsIdentity(claims, CookieAuthenticationDefaults.AuthenticationScheme);
            var principal = new ClaimsPrincipal(identity);

            // Sign in with cookie authentication
            await httpContext.SignInAsync(
                CookieAuthenticationDefaults.AuthenticationScheme,
                principal,
                new AuthenticationProperties
                {
                    IsPersistent = false,
                    ExpiresUtc = DateTimeOffset.UtcNow.AddHours(8)
                });

            // Redirect to home page
            Navigation.NavigateTo("/", forceLoad: true);
        }
        catch (Exception ex)
        {
            errorMessage = "An unexpected error occurred during login. Please try again later.";
            // In production, log the exception
            Console.WriteLine($"Login error: {ex.Message}");
        }
        finally
        {
            isLoggingIn = false;
        }
    }
}
