@page "/login"
@rendermode InteractiveServer
@using OopsReviewCenter.Services
@inject OopsReviewCenterAA AuthService
@inject NavigationManager Navigation
@inject IHttpContextAccessor HttpContextAccessor

<PageTitle>Login - OopsReviewCenter</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">OopsReviewCenter Login</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @errorMessage
                        </div>
                    }

                    <div>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" id="username" class="form-control" value="@username" @oninput="@((e) => username = e.Value?.ToString() ?? string.Empty)" placeholder="Enter username" />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" id="password" class="form-control" value="@password" @oninput="@((e) => password = e.Value?.ToString() ?? string.Empty)" placeholder="Enter password" />
                        </div>

                        <div class="d-grid">
                            <button type="button" class="btn btn-primary" @onclick="HandleLogin" disabled="@isLoggingIn">
                                @if (isLoggingIn)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Logging in...</span>
                                }
                                else
                                {
                                    <span>Login</span>
                                }
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string username = string.Empty;
    private string password = string.Empty;
    private string? errorMessage;
    private bool isLoggingIn = false;

    private async Task HandleLogin()
    {
        // Set loading state and clear errors first - this triggers a render
        isLoggingIn = true;
        errorMessage = null;
        
        // Use local variable to collect errors without triggering additional renders
        // State changes trigger re-renders which start the response, preventing cookie writes
        string? localErrorMessage = null;

        try
        {
            var httpContext = HttpContextAccessor.HttpContext;
            if (httpContext == null)
            {
                localErrorMessage = "Unable to authenticate. HTTP context not available.";
                return;
            }

            // Perform sign-in on the correct synchronization context
            bool ok = false;
            string? error = null;
            await InvokeAsync(async () =>
            {
                (ok, error) = await AuthService.SignInAsync(username, password, httpContext);
            });

            if (ok)
            {
                // Redirect to home page - forceLoad ensures a full page reload
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else
            {
                localErrorMessage = error;
            }
        }
        catch (Exception ex)
        {
            localErrorMessage = $"An error occurred during login: {ex.Message}";
        }
        finally
        {
            // Update state after the login attempt completes (success or failure)
            // This ensures any error messages are displayed without triggering renders during auth
            if (localErrorMessage != null)
            {
                errorMessage = localErrorMessage;
            }
            isLoggingIn = false;
        }
    }
}
