@page "/admin/tags"
@layout AdminLayout
@using OopsReviewCenter.Data
@using OopsReviewCenter.Models
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext

<PageTitle>Tags - Admin - OopsReviewCenter</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Tags</h1>
    <button class="btn btn-primary" @onclick="ShowAddTag">
        <span class="bi bi-plus"></span> New Tag
    </button>
</div>

@if (tags == null)
{
    <p><em>Loading...</em></p>
}
else if (!tags.Any() && !showAddForm)
{
    <div class="alert alert-info">No tags found. Create your first tag!</div>
}
else
{
    @if (showAddForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5>@(editingTag == null ? "Add New Tag" : "Edit Tag")</h5>
            </div>
            <div class="card-body">
                <EditForm Model="@currentTag" OnValidSubmit="@SaveTag">
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <InputText @bind-Value="currentTag.Name" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Color</label>
                        <input type="color" @bind="currentTag.Color" class="form-control form-control-color" />
                        <small class="form-text text-muted">Choose a color for this tag</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Preview</label>
                        <div>
                            <span class="badge" style="background-color: @currentTag.Color;">@currentTag.Name</span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
                </EditForm>
            </div>
        </div>
    }

    @if (tags.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Color</th>
                        <th>Preview</th>
                        <th>Created At</th>
                        <th>Usage</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tag in tags)
                    {
                        <tr>
                            <td>@tag.Id</td>
                            <td>@tag.Name</td>
                            <td>@tag.Color</td>
                            <td>
                                <span class="badge" style="background-color: @tag.Color;">@tag.Name</span>
                            </td>
                            <td>@tag.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@tag.IncidentTags.Count incident(s)</td>
                            <td>
                                <button class="btn btn-sm btn-primary" @onclick="() => EditTag(tag)">
                                    Edit
                                </button>
                                @if (tag.IncidentTags.Count == 0)
                                {
                                    <button class="btn btn-sm btn-danger" @onclick="() => DeleteTag(tag.Id)">
                                        Delete
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-danger" disabled title="Cannot delete tag that is in use">
                                        Delete
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}

@code {
    private List<Tag>? tags;
    private Tag currentTag = new() { Color = "#3498db" };
    private Tag? editingTag;
    private bool showAddForm = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadTags();
    }

    private async Task LoadTags()
    {
        tags = await DbContext.Tags
            .Include(t => t.IncidentTags)
            .OrderBy(t => t.Name)
            .ToListAsync();
    }

    private void ShowAddTag()
    {
        editingTag = null;
        currentTag = new Tag { Color = "#3498db" };
        showAddForm = true;
    }

    private void EditTag(Tag tag)
    {
        editingTag = tag;
        currentTag = new Tag
        {
            Id = tag.Id,
            Name = tag.Name,
            Color = tag.Color,
            CreatedAt = tag.CreatedAt
        };
        showAddForm = true;
    }

    private async Task SaveTag()
    {
        if (editingTag != null)
        {
            // Update existing tag
            var tag = await DbContext.Tags.FindAsync(editingTag.Id);
            if (tag != null)
            {
                tag.Name = currentTag.Name;
                tag.Color = currentTag.Color;
            }
        }
        else
        {
            // Add new tag
            currentTag.CreatedAt = DateTime.UtcNow;
            DbContext.Tags.Add(currentTag);
        }

        await DbContext.SaveChangesAsync();
        await LoadTags();
        CancelEdit();
    }

    private async Task DeleteTag(int id)
    {
        var tag = await DbContext.Tags.FindAsync(id);
        if (tag != null)
        {
            DbContext.Tags.Remove(tag);
            await DbContext.SaveChangesAsync();
            await LoadTags();
        }
    }

    private void CancelEdit()
    {
        showAddForm = false;
        editingTag = null;
        currentTag = new Tag { Color = "#3498db" };
    }
}
