@page "/access-denied"

<PageTitle>Access Denied - OopsReviewCenter</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Access Denied</h3>
                </div>
                <div class="card-body">
                    <p class="lead">You do not have permission to access this resource.</p>
                    <p>If you believe you should have access, please contact your administrator.</p>
                    <hr />
                    <div class="d-flex gap-2">
                        <a href="/" class="btn btn-primary">Go to Dashboard</a>
                        <a href="/logout" class="btn btn-secondary">Sign Out</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
