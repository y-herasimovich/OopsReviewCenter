@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization

<CascadingAuthenticationState>
    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <div class="top-row px-4">
                <AuthorizeView>
                    <Authorized Context="auth">
                        <div class="d-flex align-items-center gap-3">
                            <AuthorizeView Policy="AdminFullAccess">
                                <Authorized>
                                    <a href="/admin/templates" class="btn btn-sm btn-outline-danger">Admin Panel</a>
                                </Authorized>
                            </AuthorizeView>
                            <span class="text-muted">
                                <strong>@auth.User.FindFirst("FullName")?.Value</strong>
                                <span class="badge bg-secondary ms-2">@auth.User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span>
                            </span>
                            <a href="/logout" class="btn btn-sm btn-outline-secondary">Sign Out</a>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <a href="/login" class="btn btn-sm btn-primary">Sign In</a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>

    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
</CascadingAuthenticationState>
