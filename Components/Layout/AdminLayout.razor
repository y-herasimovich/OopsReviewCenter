@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization

<CascadingAuthenticationState>
    <div class="page">
        <div class="sidebar">
            <AdminNavMenu />
        </div>

        <main>
            <div class="top-row px-4">
                <div class="d-flex align-items-center gap-3">
                    <a href="/" class="btn btn-sm btn-secondary">‚Üê Back to User View</a>
                    <AuthorizeView>
                        <Authorized>
                            <span class="text-muted">
                                <strong>@context.User.FindFirst("FullName")?.Value</strong>
                                <span class="badge bg-secondary ms-2">@context.User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span>
                            </span>
                            <a href="/logout" class="btn btn-sm btn-outline-secondary">Sign Out</a>
                        </Authorized>
                    </AuthorizeView>
                </div>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>

    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">üóô</a>
    </div>
</CascadingAuthenticationState>
